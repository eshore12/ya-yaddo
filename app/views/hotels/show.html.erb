<div class="page">
  <div class="banner-photo">
    <% if @hotel.photo.attached? %>
      <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @hotel.photo.key, height: 300, width: 400, resize: :limit %>);">
      <% else %>
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1517840901100-8179e982acb7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80)">
        <% end %>
        <div class="container">
          <h1><%= @hotel.name %></h1>
          <p>  <%= @hotel.address %></p>
        </div>
      </div>
    </div>
    <div class="show-title">
      <h1>List of Clothes</h1>
      <div class="banner-button-container">
        <div class="banner-button">
          <%= link_to "Add Clothes", new_hotel_apparel_path(@hotel), class: "btn btn-ghost" %>
        </div>
      </div>
    </div>
    <div class="apparel-cards">
      <% @hotel.apparels.each do |apparel| %>
        <div class="card-trip">
        <% if apparel.photo.attached?%>
                  <img src="<%= cl_image_path apparel.photo.key, height: 300, width: 400, resize: :scale %>" />
    <% else %>
      <img src="https://res.cloudinary.com/dqnfjaom7/image/upload/v1613913278/uniqlo_shirt_vtejc5.jpg" />
    <% end %>
    <div class="card-trip-infos">
      <h2><%= apparel.brand %></h2>
      <p><%= apparel.category %></p>
      <div class="edit">
<%= link_to edit_apparel_path(apparel), class: 'card-edit-link' do %>
          <i class="far fa-edit"></i>
          <% end %>
      </div>
      <div class="delete">
        <%= link_to apparel_path(apparel), method: :delete, class: 'card-remove-link', data: { confirm: "Are you sure you want to delete?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
<%# redirect_to hotel_path(@apparel.hotel) %>
